<div class="page-body">
  <div class="body-left">
    <%= render 'shared/navbar' %>
  </div>
  <div class="gallery">
    <div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
      <div class="mySlides fade">
        <img src="/assets/1985-2003/antler_creek_lg.jpg" alt="Antler Creek" style="width: 600px;">
        <div class="text">"Antler Creek"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1985-2003/cariboo_mtns_lg.jpg" alt="Cariboo Mountains" style="width: 600px;">
        <div class="text">"Cariboo Mountains"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1985-2003/cariboo_spring_lg.jpg" alt="Cariboo Spring" style="width: 600px;">
        <div class="text">"Cariboo Spring"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1985-2003/lightning_creek_lg.jpg" alt="Lightning Creek" style="width: 600px;">
        <div class="text">"Lightning Creek"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1985-2003/mt_athabaska_rockies_lg.jpg" alt="Mt. Athabaska Rockies" style="width: 600px;">
        <div class="text">"Mt. Athabaska Rockies"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1985-2003/quesnel_river_lg.jpg" alt="Quesnel River" style="width: 600px;">
        <div class="text">"Quesnel River"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1985-2003/summer_in_the_rockies_lg.jpg" alt="Summer in the Rockies" style="width: 600px;">
        <div class="text">"Summer in the Rockies"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1985-2003/windy_joe_lg.jpg" alt="Windy Joe" style="width: 600px;">
        <div class="text">"Windy Joe"</div>
      </div>


      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div class="dot-row" style="text-align:center">
      <span class="dot" onclick="currentSlide(1)"></span>
      <span class="dot" onclick="currentSlide(2)"></span>
      <span class="dot" onclick="currentSlide(3)"></span>
      <span class="dot" onclick="currentSlide(4)"></span>
      <span class="dot" onclick="currentSlide(5)"></span>
      <span class="dot" onclick="currentSlide(6)"></span>
      <span class="dot" onclick="currentSlide(7)"></span>
      <span class="dot" onclick="currentSlide(8)"></span>
    </div>

  </div>
</div>
<div class="footer">
  <%= render 'shared/footer' %>
</div>

