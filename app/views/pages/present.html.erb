<div class="page-body">
  <div class="body-left">
    <%= render 'shared/navbar' %>
  </div>
  <div class="gallery">
    <div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
      <div class="mySlides fade">
        <%= image_tag "2020-present/01_MountSlesse-NightoftheStorm_lg.jpg", width: 600 %>
        <div class="text">"Mount Slesse - Night of the Storm"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "2020-present/02_Mt. Cheam_ from the West_lg.jpg", width: 600 %>
        <div class="text">"Mount Cheam from the West"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "2020-present/03_Lady Peak_turbulent sky_lg.jpg", width: 600 %>
        <div class="text">"Lady Peak - Turbulent Sky"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "2020-present/04_Above the tree line_lg.jpg", width: 600 %>
        <div class="text">"Above the Tree Line"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "2020-present/05_Storm over Mt. Tomyhoi_lg.jpg", width: 600 %>
        <div class="text">"Storm over Mount Tomyhoi"</div>
      </div>




<!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>

      <!-- The dots/circles -->
      <div class="dot-row" style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
        <span class="dot" onclick="currentSlide(4)"></span>
        <span class="dot" onclick="currentSlide(5)"></span>
      </div>
    </div>
  </div>
</div>

