<div class="page-body">
  <div class="body-left">
    <%= render 'shared/navbar' %>
  </div>
  <div class="gallery">
    <div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
      <div class="mySlides fade">
        <!-- <img src="/assets/1977-1984/border_peaks_22x26.jpg" alt="Border Peaks" style="height: 500px;"> -->
        <%= image_tag "1977-1984/border_peaks_22x26.jpg", height: 500 %>
        <div class="text">"Border Peaks"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "1977-1984/bowron_lake_lg.jpg", width: 600 %>
        <div class="text">"Bowron Lake"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "1977-1984/devils_canyon_lg.jpg", height: 500 %>
        <div class="text">"Devil's Canyon"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "1977-1984/diamond_head_trail_lg.jpg", height: 500 %>
        <div class="text">"Diamond Head Trail"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "1977-1984/lucky_four_lg.jpg", width: 600 %>
        <div class="text">"Lucky Four"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "1977-1984/hanging_lake_lg.jpg", height: 500 %>
        <div class="text">"Hanging Lake"</div>
      </div>

      <div class="mySlides fade">
        <%= image_tag "1977-1984/trees_on_ford_lg.jpg", height: 500 %>
        <div class="text">"Trees on Ford"</div>
      </div>


      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>

      <!-- The dots/circles -->
      <div class="dot-row" style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
        <span class="dot" onclick="currentSlide(4)"></span>
        <span class="dot" onclick="currentSlide(5)"></span>
        <span class="dot" onclick="currentSlide(6)"></span>
        <span class="dot" onclick="currentSlide(7)"></span>
      </div>
    </div>
  </div>
</div>

