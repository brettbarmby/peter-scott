<div class="page-body">
  <div class="body-left">
    <%= render 'shared/navbar' %>
  </div>
  <div class="gallery">
    <div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
      <div class="mySlides fade">
        <img src="/assets/1977-1984/border_peaks_22x26.jpg" alt="Border Peaks" style="height: 500px;">
        <div class="text">"Border Peaks"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1977-1984/bowron_lake_lg.jpg" alt="Bowron Lake" style="width: 600px;">
        <div class="text">"Bowron Lake"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1977-1984/devils_canyon_lg.jpg" alt="Devil's Canyon" style="height: 500px;">
        <div class="text">"Devil's Canyon"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1977-1984/diamond_head_trail_lg.jpg" alt="Diamond Head Trail" style="height: 500px;">
        <div class="text">"Diamond Head Trail"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1977-1984/lucky_four_lg.jpg" alt="Lucky Four" style="width: 600px;">
        <div class="text">"Lucky Four"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1977-1984/hanging_lake_lg.jpg" alt="Hanging Lake" style="height: 500px;">
        <div class="text">"Hanging Lake"</div>
      </div>

      <div class="mySlides fade">
        <img src="/assets/1977-1984/trees_on_ford_lg.jpg" alt="Trees on Ford" style="height: 500px;">
        <div class="text">"Trees on Ford"</div>
      </div>


      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div class="dot-row" style="text-align:center">
      <span class="dot" onclick="currentSlide(1)"></span>
      <span class="dot" onclick="currentSlide(2)"></span>
      <span class="dot" onclick="currentSlide(3)"></span>
      <span class="dot" onclick="currentSlide(4)"></span>
      <span class="dot" onclick="currentSlide(5)"></span>
      <span class="dot" onclick="currentSlide(6)"></span>
      <span class="dot" onclick="currentSlide(7)"></span>
    </div>
  </div>
</div>
<div class="footer">
  <%= render 'shared/footer' %>
</div>
